<!DOCTYPE html>

@{
    ViewBag.Title = "DeadMetalSite";
}
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><center>@ViewBag.Title - DEAD METAL </center></title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")


</head>

<body style=" background-color: #181818; background-image: url('../../Images/darkback.png'); width:100%;">
    <link href="https://fonts.googleapis.com/css?family=Orbitron" rel="stylesheet">
    <div style="background-color:black;color:lawngreen; height:25%; position:static"><center>  <img src="~/Images/deadmetal.png" class="HeaderBorder" /></center></div>
    <div class="navbar navbar-collapse" style="background-color:black; color:lawngreen">
        <div class="container">

            <div class="navbar-nav" style="color:lawngreen">

                <ul class="nav navbar-expand">
                    <li style="margin-right:40px; font-family:Orbitron">@Html.ActionLink("Home", "Index", "Home", new { Style = "color:Green" })</li>
                    <li style="margin-right:40px; font-family:Orbitron">@Html.ActionLink("Media", "About", "Home", new { Style = "color:Green" })</li>
                    <li style="margin-right:40px; font-family:Orbitron">@Html.ActionLink("Beta", "Contact", "Home", new { Style = "color:Green" })</li>
                </ul>

            </div>
        </div>
    </div>
    <div style="background-color:transparent;">
        @RenderBody()


    </div>

    <div class="footer">

        <footer>
            &copy; @DateTime.Now.Year - MonotoneGamedev
        </footer>

    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
