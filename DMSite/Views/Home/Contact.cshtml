@model DMSite.Models.EmailMember

@{
    ViewBag.Title = "Contact";
}


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css?family=Orbitron" rel="stylesheet">
<center>
    <div class="divBorder" style="margin-top:2%; color:lawngreen">
        <center>

            @using (Html.BeginForm("ContactSubmit", "Home", FormMethod.Post))
            {
                <br />   
                <img src="~/Images/testsignuppage.png" class="ImageBorderLong" style="transform:scale(2,2); margin-bottom:170px; margin-top:170px; width:50%!important" />
                <br />   
                <h1 style="font-family:Orbitron">Sign up for the beta now</h1>
                <p class="TextBorderContact" style="font-family:Orbitron">All information collected will be kept only for the purpose of emailing for beta access and other events. <br />  Beta is currently expected to come at a later point in 2019</p>


                <p style="font-family:Orbitron">Email:</p>   @Html.TextBoxFor(EmailMember => EmailMember.Email, new { @class = "form-control", @placeholder = "Name" })
                <br />  
                <input type="submit" value="Sign Up" class="btn btn-dark" />
            }
        </center>
    </div>
</center>




